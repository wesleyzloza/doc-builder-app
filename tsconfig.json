{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "jest",
      "vite/client"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}